# Template file for 'NXEngine-evo'
pkgname=NXEngine-evo
version=2.4.1
revision=1
wrksrc=nxengine-evo-${version}
only_for_archs="i686 x86_64 x86_64-musl"
build_style=cmake
makedepends="SDL2-devel libpng-devel SDL2_ttf-devel"
depends="SDL2 SDL2_ttf libpng"
