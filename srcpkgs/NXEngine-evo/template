do_install() {
	vmkdir usr/share/NXEngine-evo
	vcopy bin/nx usr/share/NXEngine-evo
	vcopy bin/extract usr/share/NXEngine-evo
	vcopy "data/" usr/share/NXEngine-evo
	vbin ${FILESDIR}/nx
	#vinstall ${FILESDIR}/cavestory.desktop 644 usr/share/applications/
	#vinstall ${FILESDIR}/cavestory.png 644 usr/share/pixmaps/
}
