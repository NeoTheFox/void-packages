# Template file for 'kitty'
pkgname=kitty
version=0.2.6
revision=1
nopie=true
python_version=3
hostmakedepends="pkg-config"
makedepends="python3-devel ncurses glew-devel fontconfig-devel glfw-devel"
depends="xrdb xsel glew>=2.0 python3 glfw fontconfig"
